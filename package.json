{
  "name": "slot-machine",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "format": "prettier ./**/*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts,css,scss,md,json,html} --write ",
    "prepare": "node scripts/prepare.mjs",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "pre-commit": "lint-staged",
    "doc:gen": "vue-docgen -c docgen.config.mjs"
  },
  "dependencies": {
    "@mdi/font": "7.2.96",
    "pinia": "^2.1.4",
    "roboto-fontface": "*",
    "vue": "^3.3.4",
    "vuetify": "^3.3.9",
    "webfontloader": "^1.6.28"
  },
  "devDependencies": {
    "@babel/types": "^7.22.5",
    "@commitlint/cli": "^17.6.7",
    "@commitlint/config-conventional": "^17.6.7",
    "@pinia/testing": "^0.1.2",
    "@rushstack/eslint-patch": "^1.3.2",
    "@testing-library/dom": "^9.3.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/user-event": "^14.4.3",
    "@testing-library/vue": "^7.0.0",
    "@tsconfig/recommended": "^1.0.2",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.4.2",
    "@types/testing-library__jest-dom": "^5.14.8",
    "@types/webfontloader": "^1.6.35",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/tsconfig": "^0.4.0",
    "eslint": "^8.45.0",
    "eslint-plugin-jest-dom": "^5.0.1",
    "eslint-plugin-vue": "^9.15.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "resize-observer-polyfill": "^1.5.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.6",
    "vite-plugin-vuetify": "^1.0.2",
    "vitest": "^0.33.0",
    "vue-docgen-cli": "^4.67.0",
    "vue-tsc": "^1.8.5"
  },
  "lint-staged": {
    "*": [
      "pnpm doc:gen",
      "git add ."
    ],
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts}": [
      "pnpm lint"
    ],
    "*.{vue,js,jsx,cjs,mjs,ts,tsx,cts,mts,css,scss,md,json,html}": "prettier --write"
  }
}
